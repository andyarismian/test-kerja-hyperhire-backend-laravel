{
  "openapi": "3.0.0",
  "info": {
    "title": "HyperHire People API",
    "description": "API for managing people and their likes/dislikes with location-based recommendations",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "admin@example.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Local development server"
    }
  ],
  "tags": [
    {
      "name": "People",
      "description": "Operations related to people"
    },
    {
      "name": "Likes",
      "description": "Operations related to likes and dislikes"
    }
  ],
  "paths": {
    "/api/v1/people/{id}": {
      "get": {
        "tags": ["People"],
        "summary": "Get recommended people for a specific person",
        "description": "Returns a paginated list of recommended people based on location proximity (same city > same country > different country), age similarity (Â±5 years preferred), and popularity (likes_count). Excludes people already liked/disliked.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the person to get recommendations for",
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "required": false,
            "description": "Number of results per page",
            "schema": {
              "type": "integer",
              "default": 10,
              "example": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "current_page": {
                      "type": "integer",
                      "example": 1
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Person"
                      }
                    },
                    "first_page_url": {
                      "type": "string",
                      "example": "http://localhost:8000/api/v1/people/1?page=1"
                    },
                    "from": {
                      "type": "integer",
                      "example": 1
                    },
                    "last_page": {
                      "type": "integer",
                      "example": 5
                    },
                    "last_page_url": {
                      "type": "string",
                      "example": "http://localhost:8000/api/v1/people/1?page=5"
                    },
                    "next_page_url": {
                      "type": "string",
                      "nullable": true,
                      "example": "http://localhost:8000/api/v1/people/1?page=2"
                    },
                    "path": {
                      "type": "string",
                      "example": "http://localhost:8000/api/v1/people/1"
                    },
                    "per_page": {
                      "type": "integer",
                      "example": 10
                    },
                    "prev_page_url": {
                      "type": "string",
                      "nullable": true
                    },
                    "to": {
                      "type": "integer",
                      "example": 10
                    },
                    "total": {
                      "type": "integer",
                      "example": 50
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Person not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/people/{id}/like": {
      "post": {
        "tags": ["Likes"],
        "summary": "Like a person",
        "description": "Records a like for the specified person. Updates the person's likes_count.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the person to like",
            "schema": {
              "type": "integer",
              "example": 5
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["liker_id"],
                "properties": {
                  "liker_id": {
                    "type": "integer",
                    "description": "ID of the person who is liking",
                    "example": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully liked",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "liked"
                    },
                    "likes_count": {
                      "type": "integer",
                      "example": 42
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - liker_id is required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Person not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/people/{id}/dislike": {
      "post": {
        "tags": ["Likes"],
        "summary": "Dislike a person",
        "description": "Records a dislike for the specified person. Updates the person's likes_count.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the person to dislike",
            "schema": {
              "type": "integer",
              "example": 5
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["liker_id"],
                "properties": {
                  "liker_id": {
                    "type": "integer",
                    "description": "ID of the person who is disliking",
                    "example": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully disliked",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "disliked"
                    },
                    "likes_count": {
                      "type": "integer",
                      "example": 41
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - liker_id is required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Person not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/people/{id}/likes": {
      "get": {
        "tags": ["Likes"],
        "summary": "Get list of people liked by a specific person",
        "description": "Returns all people that the specified person has liked",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the person whose likes to retrieve",
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "person_id": {
                      "type": "integer",
                      "example": 1
                    },
                    "person_name": {
                      "type": "string",
                      "example": "John Doe"
                    },
                    "liked_people": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Person"
                      }
                    },
                    "total_likes": {
                      "type": "integer",
                      "example": 5
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Person not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Person": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "age": {
            "type": "integer",
            "nullable": true,
            "example": 28
          },
          "pictures": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": [
              "https://via.placeholder.com/640x480.png/001155?text=people+Faker+dolorem",
              "https://via.placeholder.com/640x480.png/00ddbb?text=people+Faker+quia",
              "https://via.placeholder.com/640x480.png/0022ff?text=people+Faker+et"
            ]
          },
          "location": {
            "type": "string",
            "nullable": true,
            "example": "Jakarta, Indonesia"
          },
          "likes_count": {
            "type": "integer",
            "example": 42
          },
          "notified_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "example": "2025-12-07T12:30:00.000000Z"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "example": "2025-12-06T10:00:00.000000Z"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "example": "2025-12-07T11:30:00.000000Z"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Person not found"
          }
        }
      }
    }
  }
}
