{
  "info": {
    "name": "HyperHire People API",
    "description": "Collection for testing HyperHire People API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "People",
      "item": [
        {
          "name": "Get Recommended People",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/people/1?per_page=10",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "people", "1"],
              "query": [
                {
                  "key": "per_page",
                  "value": "10",
                  "description": "Number of results per page"
                }
              ]
            },
            "description": "Get recommended people for person with ID 1, based on location proximity and age similarity"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Likes",
      "item": [
        {
          "name": "Like a Person",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"liker_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/people/5/like",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "people", "5", "like"]
            },
            "description": "Person with ID 1 likes person with ID 5"
          },
          "response": []
        },
        {
          "name": "Dislike a Person",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"liker_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/people/5/dislike",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "people", "5", "dislike"]
            },
            "description": "Person with ID 1 dislikes person with ID 5"
          },
          "response": []
        },
        {
          "name": "Get Liked People",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/people/1/likes",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "people", "1", "likes"]
            },
            "description": "Get list of all people that person with ID 1 has liked"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    }
  ]
